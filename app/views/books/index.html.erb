<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<% @books.each do |book| %>
<%= link_to book_path(book.id) do %> 

<%= book.title%>
<%= book.body%>
<% end %>
<% end %>
<%= form_for(@book) do |f|%>

  	<%= f.label :title,"Title"%>
  	<div>
  	<%= f.text_field :title%>
  	</div>
  		<%= f.label :body%>
  <div><%= f.text_area :body%></div>
  <div><%= f.submit %></div>
  <% end%>